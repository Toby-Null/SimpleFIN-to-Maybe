<%- include('partials/header') %>

<div class="row mb-4">
  <div class="col">
    <h1 class="display-6 mb-3">
      <i class="fas fa-exclamation-triangle text-danger me-2"></i>
      Something went wrong
    </h1>
  </div>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body p-4">
    <div class="row">
      <div class="col-md-8">
        <div class="mb-4">
          <h5 class="mb-3">Error Details</h5>
          <div class="alert alert-danger">
            <h4 class="alert-heading">
              <i class="fas fa-exclamation-circle me-2"></i>
              <%= message || "Page not found" %>
            </h4>
            <hr>
            <p class="mb-0">
              <%= error?.status === 404 ? "The page you are looking for does not exist or has been moved." : "An error occurred while processing your request." %>
            </p>
          </div>
        </div>
        
        <% if (process.env.NODE_ENV === 'development') { %>
          <div class="mb-4">
            <div class="card bg-light">
              <div class="card-header d-flex justify-content-between align-items-center">
                <span>Stack Trace</span>
                <span class="badge rounded-pill bg-secondary">Development Mode</span>
              </div>
              <div class="card-body">
                <pre class="mb-0 text-wrap" style="white-space: pre-wrap;"><%= error?.stack || "" %></pre>
              </div>
            </div>
          </div>
        <% } %>
      </div>
      
      <div class="col-md-4 d-flex justify-content-center align-items-center">
        <div class="text-center">
          <div class="display-1 text-muted">
            <i class="fas <%= error?.status === 404 ? 'fa-map-signs' : 'fa-bug' %>"></i>
          </div>
          <h2 class="mt-3"><%= error?.status || 500 %></h2>
          <p class="text-muted">
            <%= error?.status === 404 ? "Page not found" : "Internal server error" %>
          </p>
        </div>
      </div>
    </div>
    
    <hr class="my-4">
    
    <div class="d-flex justify-content-center gap-3">
      <button class="btn btn-outline-secondary rounded-pill" onclick="history.back()">
        <i class="fas fa-arrow-left me-1"></i> Go Back
      </button>
      <a href="/" class="btn btn-primary rounded-pill">
        <i class="fas fa-home me-1"></i> Back to Home
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>